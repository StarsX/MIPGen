//--------------------------------------------------------------------------------------
// Textures
//--------------------------------------------------------------------------------------
Texture2D		g_txSource;

//--------------------------------------------------------------------------------------
// Texture samplers
//--------------------------------------------------------------------------------------
SamplerState	g_smpLinear;

//--------------------------------------------------------------------------------------
// Compute shader
//--------------------------------------------------------------------------------------
float4 Resample(float2 tex)
{
	return g_txSource.SampleLevel(g_smpLinear, tex, 0.0);
}
